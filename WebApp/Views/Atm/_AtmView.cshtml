<div class="modal fade" id="atmModal" tabindex="-1" role="dialog" aria-labelledby="atmModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="atmModalLabel">Nạp tiền từ ATM hoặc Ví điện tử</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <ul class="nav nav-pills" id="pills-tab" role="tablist">
                    <li class="nav-item n-box-btn-nav">
                        <a class="nav-link active n-btn-nav" id="bank-tab" data-toggle="pill" href="#bank"
                           role="tab" aria-controls="bank" aria-selected="true">ATM</a>
                    </li>
                    <li class="nav-item n-box-btn-nav">
                        <a class="nav-link n-btn-nav" id="wallet-tab" data-toggle="pill" href="#wallet" role="tab"
                           aria-controls="wallet" aria-selected="false">Ví điện tử</a>
                    </li>
                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="bank" role="tabpanel" aria-labelledby="bank-tab">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th colspan="4" class="text-center">
                                        <br>
                                        <a class=" text-warning" href="#">
                                            Hướng Dẫn Chi Tiết Mua Nick Bằng ATM - Ví
                                            Điện Tử
                                        </a>
                                        <br>
                                        <br>
                                        <span class="text-danger">
                                            MUA NICK BẰNG ATM
                                        </span>
                                    </th>

                                </tr>
                                <tr>
                                    <th>Tên Ngân Hàng</th>
                                    <th>Số Tài Khoản</th>
                                    <th>Chủ Tài Khoản</th>
                                    <th>Chi Nhánh</th>
                                </tr>

                            </thead>
                            <tbody>

                                @foreach (var item in data)
                                {
                                    @if (item.CardType == "1")
                                    {
                                        <tr>
                                            <td>@item.BankName</td>
                                            <td>@item.CardNumber</td>
                                            <td>@item.CardHolder</td>
                                            <td>@item.CardBranch</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                    <div class="tab-pane fade" id="wallet" role="tabpanel" aria-labelledby="wallet-tab">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th colspan="3" class="text-center">
                                        <br>

                                        <span class="text-danger">
                                            MUA NICK BẰNG VÍ ĐIỆN TỬ
                                        </span>
                                    </th>

                                </tr>
                                <tr>
                                    <th>Loại Ví</th>
                                    <th>Tài Khoản</th>
                                    <th>Tên Chủ Tài Khoản</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in data)
                                {
                                    @if (item.CardType == "2")
                                    {
                                        <tr>
                                            <td>@item.BankName</td>
                                            <td>@item.CardNumber</td>
                                            <td>@item.CardHolder</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div>
                    <div class="box-atm-content">
                        <p style="text-align:center">
                            <span style="font-size:14px">
                                <span style="color:#000000">
                                    <strong>
                                        Khi chuyển khoản&nbsp;Quý khách vui lòng ghi
                                        CHÍNH XÁC NỘI DUNG:
                                    </strong>
                                </span><br>
                                <span style="color:#e74c3c">
                                    <strong>
                                        Tên Shop +&nbsp;ID của
                                        bạn
                                    </strong>
                                </span><br>
                                <span style="color:#000000">
                                    <strong>
                                        Ví dụ:&nbsp;ID của bạn là
                                    </strong>
                                </span><span style="color:#e74c3c">
                                    <strong>
                                        123456
                                    </strong>
                                </span><span style="color:#000000">
                                    <strong>
                                        thì&nbsp;bạn cần ghi nội
                                        dung sau:
                                    </strong>
                                </span><span style="color:#e74c3c"><strong>shopgame 123456</strong></span>
                            </span>
                        </p>
                        <p style="text-align:center">
                            <span style="font-size:14px">
                                <strong>
                                    <span style="color:#000000">
                                        Sau khi chuyển xong, vui lòng chụp ảnh giao dịch
                                        gửi lại cho&nbsp;
                                    </span><a href="https://www.facebook.com/Shop-Tốc-Chiến-Giá-Rẻ-108734941541385/" target="_blank">
                                        <span style="color:#2980b9">Fanpage&nbsp;</span>
                                    </a><span style="color:#000000">
                                        để được hỗ trợ<br>
                                        Liên hệ Hotline:&nbsp;
                                    </span><a href="#">
                                        <span class="nPhoneNumber" style="color:#e74c3c">@ViewBag.phone	</span>
                                    </a>
                                </strong>
                            </span>
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Đóng</button>

                </div>
            </div>
        </div>
    </div>
</div>  