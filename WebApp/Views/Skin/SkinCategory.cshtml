@model ShopGame.Service.Model.ShopGameResultModel<ShopGame.Service.Model.ViewModel.SkinViewModel>
@{
    var data = Model.Results;
    var pageSize = Model.PageSize;
    var pageNumber = Model.PageNumber;
    var pageCount = Model.PageCount;
    var skinCategory = ViewBag.SkinCategory;

}
@{
    ViewData["Title"] = "SkinCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .box-product-list .box-product-list-image img {
        height: auto;
        max-height: 350px;
    }
</style>
@section Scripts{
    <script>

        function ChangePageNumber() {
            $('.pagination li a').on('click', function (e) {
                let val = $(this).attr('data-index') ?? "";
                let search = $("#search-skin").val();
                let skincategoryId = $("#skinId").val();
                submitData.pageNumber = val;
                location.href = "/skin/skinCategory?skinCategoryId=" + skincategoryId + "&pageNumber=" + val + "&search=" + search;
            })
        }
        ChangePageNumber();


        function Search() {
            let search = $("#search-skin").val();
            let val = $(this).attr('data-index') ?? "";
            let skincategoryId = $("#skinId").val();
            location.href = "/skin/skinCategory?skinCategoryId=" + skincategoryId + "&pageNumber=" + val + "&search=" + search;
        }
        $("#search-skin").on('keypress', function (e) {
            if (e.which == 13) {
                Search();
            }
        });
    </script>

}
<!-- skin-list -->
<section id="skin-list" class="py-5">
    <div class="container bg-container p-3">
        <div class="">
            <div class="">
                <h3 class="n-blue-color">@skinCategory.Name</h3>
            </div>
            <p class="n-blue-color">
                @skinCategory.Description
            </p>
        </div>
        <div class="box-skin-list-select">
                <div class="form-group row">
                    <div class="col-sm-5">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Tìm Kiếm</span>
                            </div>
                            <input type="text" class="form-control" id="search-skin" placeholder="Search ..." aria-label=""
                                   aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <a class="btn btn-primary text-white mr-sm-2" onclick="Search()">Tìm kiếm</a>
                        <a class="btn btn-danger" href="/skin/skinCategory?skinCategoryId=@skinCategory.Id">Tất cả</a>
                    </div>
                </div>
        </div>
        <div class="row">
            @foreach (var item in data)
            {
                <div class="col-sm-6 col-lg-3 ">
                    <div class="box-product-list">
                        <div class="box-product-list-image">
                            <img class="w-100" src="@item.Image" alt="">
                        </div>
                        <div class="box-product-list-content text-center">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="text-warning">@item.Name</h5>
                                </div>
                            </div>
                            <div class="box-product-list-bottom d-flex justify-content-around">
                                <div>
                                    <span class="btn btn-outline-danger">
                                        @item.Price.ToString(" 000,0") <sup>đ</sup>
                                                                    </span>

                                </div>
                                <div>
                                    <a href="/skin/detail?skinId=@item.Id" class="btn btn-danger">CHI TIẾT</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="pagination-container">
            <ul class="pagination">
                @if (pageCount <= 4)
                {
                    for (int index = 1; index <= pageCount; index++)
                    {
                        if (index == pageNumber)
                        {
                            <li class="active"><a data-index="@index">@index</a></li>
                        }
                        else
                        {
                            <li><a data-index="@index">@index</a></li>
                        }
                    }
                }
                else
                {
                    if (pageNumber <= 2)
                    {
                        for (int index = 1; index <= 4; index++)
                        {
                            if (index == pageNumber)
                            {
                                <li class="active"><a data-index="@index">@index</a></li>
                            }
                            else
                            {
                                <li><a data-index="@index">@index</a></li>
                            }
                        }
                        <li><a class="nextPage" data-index="@pageCount"><i class="fas fa-chevron-right"></i></a></li>
                    }
                    else if (pageNumber >= pageCount - 2)
                    {
                        <li><a class="prevPage" data-index="1"><i class="fas fa-chevron-left"></i></a></li>

                        for (int index = pageCount - 3; index <= pageCount; index++)
                        {
                            if (index == pageNumber)
                            {
                                <li class="active"><a data-index="@index">@index</a></li>
                            }
                            else
                            {
                                <li><a data-index="@index">@index</a></li>
                            }
                        }
                    }
                    else
                    {
                        <li><a class="prevPage" data-index="1"><i class="fas fa-chevron-left"></i></a></li>
                        for (int index = pageNumber - 1; index <= pageNumber + 2; index++)
                        {
                            if (index == pageNumber)
                            {
                                <li class="active"><a data-index="@index">@index</a></li>
                            }
                            else
                            {
                                <li><a data-index="@index">@index</a></li>
                            }
                        }
                        <li><a class="nextPage" data-index="@pageCount"><i class="fas fa-chevron-right"></i></a></li>
                    }
                }

            </ul>
        </div>

    </div>
</section>
<div class="hidden">
    <input id="skinId" type="text" name="name" value="@skinCategory.Id" hidden/>
</div>