
@{
    ViewData["Title"] = "LỊCH SỬ GIAO DỊCH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var data = ViewBag.ListData;
}

@section Scripts{
    <script>

        function ChangePageNumber() {
            $('.pagination li a').on('click', function (e) {
                let val = $(this).attr('data-index') ?? "";
                let search = $("#search-deposit-history").val();
                submitData.pageNumber = val;
                location.href = "/BuyCard/Log?pageNumber=" + val + "&search=" + search;
            })
        }
        ChangePageNumber();


        function Search() {
            let search = $("#search-deposit-history").val();
            let val = $(this).attr('data-index') ?? "";
            location.href = "/BuyCard/Log?pageNumber=" + val + "&search=" + search;
        }
    </script>
}
