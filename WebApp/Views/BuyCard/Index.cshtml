
@{
    ViewData["Title"] = "Mua thẻ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{

    <script src="~/client/js/buycardScript.js"></script>
}
<section id="buy-card" class="py-5">
    <div class="container bg-container p-3">
        <form  action="">
            <div class="box-buy-card-client">
                <div class="box-buy-card-header text-center pt-3 pb-5">
                    <h3>DỊCH VỤ MUA THẺ</h3>
                </div>
                <div class="row">
                    <div class="col-md-3 d-none d-md-block">
                        <img class="w-100" src="~/client/images/store-card.jpg" alt="">
                    </div>
                    <div class="col-md-5">
                        <span class="mb-15 control-label bb">Chọn nhà mạng:</span>
                        <div class="mb-15">
                            <select name="telecom_key" id="telecom_key" class="server-filter form-control t14" style="">
                                <option value="VIETTEL">VIETTEL</option>
                                <option value="VCOIN">VCOIN</option>
                                <option value="GATE">GATE</option>
                                <option value="FUNCARD">FUNCARD</option>
                                <option value="ZING">ZING</option>
                                <option value="VINAPHONE">VINAPHONE</option>
                                <option value="MOBIFONE">MOBIFONE</option>
                                <option value="SCOIN">SCOIN</option>
                                <option value="APOTA">APOTA</option>
                                <option value="GARENA">GARENA</option>
                            </select>
                        </div>
                        <span class="mb-15 control-label bb">Mệnh giá:</span>
                        <div class="mb-15">
                            <select name="amount" id="amount" class="server-filter form-control t14" style="">
                                <option r-default="0" value="10000" data-ratio="100.0">10,000 VNĐ - 0%</option>
                                <option r-default="0" value="20000" data-ratio="100.0">20,000 VNĐ - 0%</option>
                                <option r-default="0" value="50000" data-ratio="96.0">50,000 VNĐ - 4%</option>
                                <option r-default="0" value="100000" data-ratio="96.0">100,000 VNĐ - 4%</option>
                                <option r-default="0" value="200000" data-ratio="96.0">200,000 VNĐ - 4%</option>
                                <option r-default="0" value="500000" data-ratio="96.0">500,000 VNĐ - 4%</option>
                                <option r-default="0" value="1000000" data-ratio="96.0">1,000,000 VNĐ - 4%</option>
                            </select>
                        </div>
                        <span class="mb-15 control-label bb">Số lượng:</span>
                        <div class="mb-15">
                            <select name="quantity" id="quantity" class="server-filter form-control t14" style="">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Tổng: <span class="sum-ne"> 10,000 <sup>đ</sup></span></button>
                        <button type="button" data-toggle="modal" data-target="#buycard-warning" class="btn btn-light btn-lg btn-block"><i class="fa fa-credit-card" aria-hidden="true"></i> Thanh toán</button>
                        <a href="/login" class="btn btn-light btn-lg btn-block check-user-false"><i class="fa fa-key" aria-hidden="true"></i> Đăng nhập để thanh toán</a>
                    </div>
                </div>
            </div>
        </form>
        <!-- end-form -->
    </div>
</section>

<div class="modal fade" id="buycard-warning" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Chức năng chưa hoạt động
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>