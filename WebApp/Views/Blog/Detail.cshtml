@model ShopGame.Service.Model.ViewModel.BlogViewModel
@{
    var types = ViewBag.BlogTypes;


}
@{
    ViewData["Title"] = Model.MetaTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- page content -->
<section id="page-content">
    <div class="container bg-container mt-3 p-3">
        <div class="row">
            <div class="col-md-3">
                <h4>BLOG TIN TỨC</h4>
            </div>
            <div class="col-md-9">
                <div class=" text-right">
                    <span>Trang chủ </span> /
                    <span>Blog tin tức</span> /
                    <span>
                        @Model.Name
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- blog-detail -->
<section id="blog-detail" class="py-5">
    <div class="container bg-container p-3">
        <div class="row">
            <div class="col-lg-9">
                <div class="box-blog-detail">
                    <div class="box-detail-blog-title">
                        <h3>
                            @Model.Name
                        </h3>
                    </div>
                    <div class="box-detail-blog-date">
                        <p>
                            <i class="fas fa-calendar-alt"></i>
                            @Model.CreatedDate
                        </p>
                    </div>
                    <div class="box-detail-blog-content">
                        @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>
            <partial name="../Blog/_MenuRight" model="types"/>
        </div>
    </div>
</section>