    <script src="/Admin/Content/pnotify/dist/pnotify.nonblock.js"></script>
</head>

<body class="login">
    <script type="text/javascript">
        $(document).ready(function () {
            $("#loginform").submit(function () {
                //debugger
                var form_data = $("#loginform").serialize();
                $.ajax({
                    url: '/Admin/Authentication/Login',
                    type: 'POST',
                    dataType: 'text',
                    data: form_data,
                    beforeSend: function () {
                        new PNotify({
                            title: 'Thông báo',
                            text: 'Bắt đầu xử lý',
                            type: 'info',
                            hide: false,
                            styling: 'bootstrap3'
                        });
                    }
                })
                    .done(function (result) {
                        PNotify.removeAll();
                        if (result == "true") {
                            new PNotify({
                                title: 'Thông báo',
                                text: "Đăng nhập thành công!",
                                type: 'success',
                                hide: false,
                                styling: 'bootstrap3',
                            });

                            new PNotify({
                                title: 'Thông báo',
                                text: 'Đang chuyển hướng',
                                type: 'info',
                                hide: false,
                                styling: 'bootstrap3',
                            });

                            setTimeout(function () {
                                window.location.href = '/Admin/Home/Index';
                            }, 1000);
                        } else {
                            let msg = "Đăng nhập thất bại";
                            new PNotify({
                                title: 'Thông báo',
                                text: msg,
                                type: 'error',
                                hide: false,
                                styling: 'bootstrap3'
                            });
                        }
                    })
                    .fail(function () {
                        new PNotify({
                            title: 'Thông báo',
                            text: 'Lỗi xử lý đăng nhập',
                            type: 'error',
                            hide: false,
                            styling: 'bootstrap3'
                        });
                    })
                    .always(function () {
                        console.log("complete");
                    });
                return false;
            });

        });
    </script>
    @RenderBody()
</body>
</html>
