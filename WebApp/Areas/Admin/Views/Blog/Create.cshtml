@model ShopGame.Service.Model.BlogModel
@{
    ViewBag.Title = "Thêm mới blog";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmins.cshtml";
}
<style>
    .input-group-prepend, .input-group-prepend > label {
        width: 120px !important;
    }

    .form-group label {
        cursor: pointer;
    }

    h6 label {
        color: #495057;
        font-size: 1.1rem;
        font-weight: 400;
        line-height: 1.2;
    }

    .list-process, .list-image, .list-theme {
        display: flex;
        flex-wrap: wrap;
    }

    .process-item, .theme-item {
        position: relative;
        border-radius: 5px;
        background: #26aa7b;
        margin-right: 5px;
        margin-bottom: 5px;
    }

        .process-item i, .theme-item i {
            position: absolute;
            right: 5px;
            top: 20%;
            color: aliceblue;
        }

    .image-item {
        position: relative;
        width: 100%;
        height: 120px;
        margin: 10px;
        margin-left: 0px;
    }

        .image-item img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .image-item i {
            position: absolute;
            top: 5px;
            right: 5px;
            color: red;
        }
</style>

<form class="show-table form-input">
    <div class="container-fluid objInfor pl-3 pr-3">
        <div class="row mb-1 objnews">
            <input type="hidden" name="Id" value="@Model.Id" id="Id" />
            <div class="col-md-9 mb-3">
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">Tên tiêu đề</label>
                                </div>
                                <input type="text" name="Name" class="form-control validation" id="Name" value="@Model.Name" maxlength="250">
                                <div class="text-danger"></div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">Danh mục</label>
                                </div>
                                <select name="BlogTypeId" class="form-control validation">
                                    <option value="0">Chọn danh mục</option>
                                    @foreach (var item in ViewBag.Category as IEnumerable<ShopGame.Service.Model.BlogTypeModel>)
                                    {
                                        <option value="@item.Id" @if (item.Id == Model.BlogTypeId) { <text> selected</text> }>@item.Name</option>
                                    }
                                </select>
                                <div class="text-danger"></div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">Meta title</label>
                                </div>
                                <textarea name="MetaTitle" rows="1" class="form-control validation">@Model.MetaTitle</textarea>
                                <div class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Content-->
                <div class="mb-3">
                    <h6 class=" mb-1"><label>Nội dung chi tiết</label></h6>
                    <textarea name="Description" id="Description" class="ckeditor">@Html.Raw(Model.Description)</textarea>
                    <div class="text-danger"></div>
                </div>


                <!--Button-->
                <div class="container-fluid">
                    <div class="row mb-3">
                        <div class="col-md-12 text-right mr-0 pr-0 mt-1 mb-5 modal-footer">
                            <button type="button" class="btn btn btn-red" onclick="BackClick();"><i class="fas fa-reply-all"></i> Bỏ qua</button>
                            <button type="button" class="btn btn-green btnSave" data-id="@Model.Id" onclick="AddOrUpdateWithFile('/Admin/Blog/AddOrUpdate')"> <i class="far fa-save"></i> Ghi lại</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <h6 class="input-group-text">Ảnh Nội Dung</h6>
                <input type="hidden" name="Images" value="@Model.Image" id="Images" />
                <input type="file" id="fileImage" class="d-none" onchange="ChooseFile(this)" />
                <img src="@Model.Image" id="image" onclick="OpenFile(this)" class="img-size" alt="Cập nhật" style="object-fit:cover" />
                <div class="text-danger"></div>
            </div>
        </div>
    </div>
</form>
