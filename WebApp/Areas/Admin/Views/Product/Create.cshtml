@model ShopGame.Service.Model.ProductModel
@{
    ViewBag.Title = "Thêm mới sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmins.cshtml";
}
<style>
    .input-group-prepend, .input-group-prepend > label {
        width: 120px !important;
    }

    .form-group label {
        cursor: pointer;
    }

    h6 label {
        color: #495057;
        font-size: 1.1rem;
        font-weight: 400;
        line-height: 1.2;
        padding: 2rem 0rem;
    }

    .list-process, .list-image, .list-theme {
        display: flex;
        flex-wrap: wrap;
    }

    .process-item, .theme-item {
        position: relative;
        border-radius: 5px;
        background: #26aa7b;
        margin-right: 5px;
        margin-bottom: 5px;
    }

        .process-item i, .theme-item i {
            position: absolute;
            right: 5px;
            top: 20%;
            color: aliceblue;
        }

    .image-item {
        position: relative;
        width: 100%;
        height: 120px;
        margin: 10px;
        margin-left: 0px;
    }

        .image-item img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .image-item i {
            position: absolute;
            top: 5px;
            right: 5px;
            color: red;
        }
</style>

<form class="show-table form-input">
    <div class="container-fluid objInfor pl-3 pr-3">
        <div class="row mb-1 objnews">
            <input type="hidden" name="Id" value="@Model.Id" id="Id" />
            <div class="col-md-9 mb-1">
                <div class="row">
                    <div class="col-md-3">
                        <h6 class="input-group-text">Ảnh đại diện</h6>
                        <input type="hidden" name="Image" value="@Model.Image" id="Images" />
                        <input type="file"  id="fileImage" class="d-none" onchange="ChooseFile(this)"/>
                        <img src="@Model.Image" id="image" onclick="OpenFile(this)" class="img-size" alt="Cập nhật" style="object-fit:cover" />
                        <div class="text-danger"></div>
                    </div>

                    <div class="col-md-9">
                        @*<div class="mb-3">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">Mã sản phẩm</label>
                                </div>
                                <input type="text" name="Code" class="form-control validation" value="@Model.Code" id="Code" maxlength="20">
                                <div class="text-danger"></div>
                            </div>
                        </div>*@

                        <div class="mb-3">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">Tên sản phẩm</label>
                                </div>
                                <input type="text" name="Name" class="form-control validation" id="Name" value="@Model.Name" maxlength="250">
                                <div class="text-danger"></div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">Giá sản phẩm</label>
                                </div>
                                <input type="number" name="Price" class="form-control validation" id="Price" value="@Model.Price" maxlength="250">
                                <div class="text-danger"></div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group ">
                                <div class="input-group-prepend">
                                    <label class="input-group-text">Mô tả sản phẩm</label>
                                </div>
                                <textarea name="Description" rows="6" class="form-control validation">@Model.Description</textarea>
                                <div class="text-danger"></div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Danh mục</label>
                        </div>
                        <select name="CategoryId" class="form-control">
                            <option value="0">Chọn danh mục</option>
                            @foreach (var item in ViewBag.Category as IEnumerable<ShopGame.Service.Model.ProductCategoryModel>)
                            {
                                <option value="@item.Id" @if (item.Id == Model.CategoryId) {<text>selected</text> }>@item.Name</option>
                            }
                        </select>
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Số thứ tự</label>
                        </div>
                        <input type="text" name="OrderNo" value="@Model.OrderNo" class="form-control validation" id="OrderNo" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Rank</label>
                        </div>
                        <input type="text" name="Rank" value="@Model.Rank" class="form-control validation" id="Rank" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Tướng</label>
                        </div>
                        <input type="text" name="SoTuong"value="@Model.SoTuong" class="form-control" id="SoTuong" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Trang phục</label>
                        </div>
                        <input type="text" name="SoTrangPhuc" value="@Model.SoTrangPhuc" class="form-control" id="SoTrangPhuc" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Loại tài khoản</label>
                        </div>
                        <input type="text" name="LoaiTaiKhoan" value="@Model.LoaiTaiKhoan" class="form-control validation" id="LoaiTaiKhoan" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Nổi bật</label>
                        </div>
                        <input type="text" name="NoiBat" value="@Model.NoiBat" class="form-control" id="NoiBat" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Đăng ký</label>
                        </div>
                        <input type="text" name="DangKy" value="@Model.DangKy" class="form-control validation" id="DangKy" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Vip</label>
                        </div>
                        <input type="text" name="VIP" value="@Model.VIP" class="form-control" id="VIP" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Top</label>
                        </div>
                        <input type="number" name="Top" class="form-control" value="@Model.Top" id="Top" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Account Name</label>
                        </div>
                        <input type="text" name="AccUserName" value="@Model.AccUserName" class="form-control validation" id="AccountName" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Password</label>
                        </div>
                        <input type="text" name="AccPassword" value="@Model.AccPassword" class="form-control validation" id="AccountPassword" maxlength="250">
                        <div class="text-danger"></div>
                    </div>
                </div>


                <!--Content-->
                <div class="mb-3">
                    <h6 class=" mb-1"><label>Nội dung chi tiết</label></h6>
                    <textarea name="Detail" id="Detail" class="ckeditor">@Html.Raw(Model.Detail)</textarea>
                    <div class="text-danger"></div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Meta title</label>
                        </div>
                        <input type="text" name="Metatitle" value="@Model.MetaTitle" class="form-control" id="Metatitle" maxlength="250">
                    </div>
                    <div class="text-danger"></div>
                </div>

                <div class="mb-3">
                    <div class="input-group ">
                        <div class="input-group-prepend">
                            <label class="input-group-text">Meta description</label>
                        </div>
                        <input type="text" name="MetaDescription" value="@Model.MetaDescription" class="form-control" id="MetaDescription" maxlength="250">
                    </div>
                    <div class="text-danger"></div>
                </div>

                <!--Trạng thái-->
                <div class="form-group">
                    <label class="font-weight-bold mr-2">Trạng thái </label>
                    <input type="radio" name="Status" value="true" id="s1" @if (Model.Status == true) {<text>checked</text> } /><label class="ml-2 mr-5" for="s1">Hiển thị</label>
                    <input type="radio" name="Status" value="false" id="s2" @if (Model.Status != true) {<text>checked</text> } /><label class="ml-2" for="s2">Lưu tạm</label>
                </div>

                <!--Button-->
                <div class="container-fluid">
                    <div class="row mb-3">
                        <div class="col-md-12 text-right mr-0 pr-0 mt-1 mb-5 modal-footer">
                            <button type="button" class="btn btn btn-red" onclick="BackClick();"><i class="fas fa-reply-all"></i> Bỏ qua</button>
                            <button type="button" class="btn btn-green btnSave" data-id="@Model.Id" onclick="AddOrUpdateWithFile('/Admin/Product/AddOrUpdate')"> <i class="far fa-save"></i> Ghi lại</button>
                        </div>
                    </div>
                </div>
            </div>

            <!--Ảnh ở đây-->
            <div class="col-md-3 mb-1">
                

                <!--Thêm ảnh ở đây-->

                <div class="add-image">
                    <input type="file" id="fileImages" class="d-none" onchange="ChooseFileMultiple(this)" />
                    <button class="btn-green btn-tools btnImage w-100 p-2" type="button" onclick="OpenFileMultiple(this)">Thêm ảnh</button>
                    <div class="list-image">
                        @{
                            int i = 0;
                        }
                        @foreach (var item in Model.ProductImage)
                        {
                            <div class="image-item">
                                <img src="@item.Image" class="img-size" alt="Cập nhật"data-server="true" />
                                <i class="fas fa-times" onclick="DeleteImage(this,@(i++), false)"></i>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section scripts{ 
    <script src="~/Admin/Content/js/AdminCommon.js"></script>

}