@model ShopGame.Service.Model.ShopGameResultModel<ShopGame.Service.Model.ProductTransactionViewModel>
@{
    var data = Model.Results;
    var pageSize = Model.PageSize;
    var pageNumber = Model.PageNumber;
    var pageCount = Model.PageCount;
}

<div class="data-table">
    <table id="myTable" class="table table-striped table-bordered text-left table-hover" style="background:#fff;">
        <thead>
            <tr>
                <th>Ngày mua</th>
                <th>Loại sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>In Game</th>
                <th>AccUserName</th>
                <th>Giá</th>
                <th>ID User</th>
                <th>Tài khoản</th>
                <th>Trạng Thái</th>
                <th style="text-align:right">Tác vụ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in data)
            {
            <tr>
                <td>@item.CreatedDate.ToString("dd/MM/yyy")</td>
                @if (item.ProductType == 0)
                {
                    <td>Mua tài khoản </td>
                }
                @if (item.ProductType == 1)
                {
                    <td>Mua skin, tướng </td>
                }
                <td>@item.Name</td>
                <td>@item.IdGame</td>
                <td>@item.AccUserName</td>
                <td>@item.Price.ToString(" 000,0")<sup>đ</sup></td>
                <td>@item.UserId</td>
                <td>@item.UserName</td>
                @if (@item.ProductType == 0)
                {
                    @if (@item.Status == 1)
                    {
                        <td class="text-success">Thành công</td>

                    }@if (@item.Status == 2)
                    {
                        <td class="text-danger">Thất bại</td>
                    }
                }
                @if (@item.ProductType == 1)
                {
                    @if (@item.Status == 0)
                    {
                        <td class="text-warning">Đang chuyển</td>
                    }@if (@item.Status == 1)
                    {
                        <td class="text-success">Thành công</td>
                    }
                    @if (@item.Status == 2)
                    {
                        <td class="text-danger">Thất Bại</td>
                    }
                }
                <td style="width:80px;text-align:right">
                    <div class="d-flex justify-content-end w-100">
                        @*<button class="btn-green btn-event btnDetail" data-id="@item.Id"><i class="fas fa-info-circle"></i> </button>*@
                        <button class="btn-yellow btn-event btnEdit" data-id="@item.Id" onclick="GetFormAddOrEdit('/Admin/ProductTransaction/_AddOrEdit',@item.Id)"><i class="far fa-edit"></i> </button>
                        <button class="btn-red btn-event btnDelete" role="button" data-id="@item.Id" onclick="DeleteById('/Admin/ProductTransaction/DeleteById',@item.Id)"><i class="far fa-trash-alt"></i> </button>
                    </div>
                </td>
            </tr>
            }
        </tbody>

        <tfoot>

        </tfoot>
    </table>

    <div class="pagination-container">
        <ul class="pagination">
            @if (pageCount <= 4)
            {
                for (int index = 1; index <= pageCount; index++)
                {
                    if (index == pageNumber)
                    {
                        <li class="active"><a data-index="@index">@index</a></li>
                    }
                    else
                    {
                        <li><a data-index="@index">@index</a></li>
                    }
                }
            }
            else
            {
                if (pageNumber <= 2)
                {
                    for (int index = 1; index <= 4; index++)
                    {
                        if (index == pageNumber)
                        {
                            <li class="active"><a data-index="@index">@index</a></li>
                        }
                        else
                        {
                            <li><a data-index="@index">@index</a></li>
                        }
                    }
                    <li><a class="nextPage" data-index="@pageCount"><i class="fas fa-chevron-right"></i></a></li>
                }
                else if (pageNumber >= pageCount - 2)
                {
                    <li><a class="prevPage" data-index="1"><i class="fas fa-chevron-left"></i></a></li>

                    for (int index = pageCount - 3; index <= pageCount; index++)
                    {
                        if (index == pageNumber)
                        {
                            <li class="active"><a data-index="@index">@index</a></li>
                        }
                        else
                        {
                            <li><a data-index="@index">@index</a></li>
                        }
                    }
                }
                else
                {
                    <li><a class="prevPage" data-index="1"><i class="fas fa-chevron-left"></i></a></li>
                    for (int index = pageNumber - 1; index <= pageNumber + 2; index++)
                    {
                        if (index == pageNumber)
                        {
                            <li class="active"><a data-index="@index">@index</a></li>
                        }
                        else
                        {
                            <li><a data-index="@index">@index</a></li>
                        }
                    }
                    <li><a class="nextPage" data-index="@pageCount"><i class="fas fa-chevron-right"></i></a></li>
                }
            }

        </ul>
    </div>
</div>



