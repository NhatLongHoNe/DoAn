@{
    ViewBag.Title = "Trang quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmins.cshtml";
}
@section scripts{
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.1/chart.min.js" integrity="sha512-QSkVNOCYLtj73J4hbmVoOV6KVZuMluZlioC+trLpewV8qMjsWqlIQvkn1KGX2StWvPMdWGBqim1xlC8krl1EKQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>*@
    <script src="~/Admin/Content/js/Controller/HomeScript.js"> </script>
}
@{
    var newOrder = ViewBag.CountOrderNew;
    var countOrder = ViewBag.CountOrder;
    var total = ViewBag.TotalOrderPrice;
    var totalImport = ViewBag.TotalReciptPrice;
}
<div class="home-page">
    <div class="controller-fluid">
        <div class="row">
            <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
              <div class="inner">
                <h3>@newOrder</h3>

                <p>Các đơn hàng mới</p>
              </div>
              <div class="icon">
                <i class="ion ion-bag"></i>
              </div>
              <a href="#" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
            <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
              <div class="inner">
                <h3>@countOrder</h3>

                <p>Tổng đơn hàng</p>
              </div>
              <div class="icon">
                <i class="ion ion-stats-bars"></i>
              </div>
              <a href="/Admin/Order" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
              <div class="inner">
                <h3>@total.ToString("0,000")</h3>

                <p>Tổng tiền bán</p>
              </div>
              <div class="icon">
                <i class="ion ion-person-add"></i>
              </div>
              <a href="#" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
          <!-- ./col -->
          <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
              <div class="inner">
                <h3>@totalImport.ToString("0,000")</h3>

                <p>Tổng tiền nhập</p>
              </div>
              <div class="icon">
                <i class="ion ion-pie-graph"></i>
              </div>
              <a href="#" class="small-box-footer">Xem chi tiết <i class="fas fa-arrow-circle-right"></i></a>
            </div>
          </div>
        </div>


        <div class="row">
            <div class="col-12">
                 <select id="btnSelectTransaction" class="form-control form-control-sm col-2">
                  <option value="2021">2021</option>
                  <option value="2022" selected>2022</option>
                </select>
                 <canvas id="myChart" class="chart-container" style="position: relative; height:40vh; width:80vw"></canvas>
            </div>
        </div>
    </div>
</div>
